<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">
            <span class="h5">Modificar <%= title %></span>
        </h6>
    </div>
    <div class="card-body">
        <div class="col-12 m-auto">
            <!-- Compruebo que exista el usuario -->
            <% rol.forEach(function(rol) { %>
                <form class="row g-3" action="/roles/editar/<%= rol.id %>" method="POST">
                    <div class="col-md-12">
                        <label for="nombre" class="form-label">Nombre <span class="text-warning">(*)</span></label>
                        <input type="text" class="form-control" id="nombre" value="<%= rol.nombre %> " name="nombre"
                            placeholder="Nombre ( requerido )">
                    </div>
                    <div class="col-12">
                        <label class="form-check-label mb-2" for="invalidCheck">
                            Seleccionar Menu:
                        </label>
                        <div class="form-check row">
                            <% menus.forEach(function(menu, index) { %>
                                <div class="col-6 col-md-4">
                                    <input class="form-check-input" type="checkbox" value="<%= menu.id%>"
                                        name="menusrol" id="<%=menu.nombre %> " <% if (menusRol.some(m=> m.id ===
                                    menu.id)) { %>
                                    checked
                                    <% } %>
                                        >
                                        <label class="form-check-label" for="<%=menu.nombre %> ">
                                            <%= menu.nombre %>
                                        </label>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <a href="/roles/listar" class="btn btn-danger mr-2">Cancelar</a>
                        <button class="btn btn-primary" type="submit" onclick="guardar()">Modificar</button>
                    </div>
                </form>
                <% }) %>
        </div>
    </div>
</div>

<script>
    // Modifica la función guardar para que sea asíncrona
    function guardar() {
        // Mostrar SweetAlert2
        Swal.fire({
            position: 'center',
            icon: 'success',
            title: 'Modificado Correctamente',
            text: 'Datos Correctos!',
            showConfirmButton: false,
            timer: 1500
        }).then(() => {
            // Redirigir después de mostrar la alerta
            window.location = '/roles/listar';
        });
    }

</script>