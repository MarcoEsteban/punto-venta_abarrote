<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors" />
  <meta name="generator" content="Hugo 0.88.1" />
  <title>Punto Venta</title>

  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="css/signin.css" rel="stylesheet" />
</head>

<body class="text-center">
  <main class="form-signin">
    <div class="text-center shadow-lg p-3 rounded">
      <form class="for-login" action="/login" method="POST">
        <!-- <i class="fa-solid fa-shop"></i> -->
        <img class="mb-0" src="img/logo.png" alt="" width="300" height="190" />
        <h1 class="h3 mb-3 fw-normal">Inicio de Sesion</h1>

        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="user" name="user" placeholder="Nombre de usuario" />
          <label for="floatingInput">Nombre Usuario</label>
        </div>
        <div class="form-floating mb-4">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
          <label for="floatingPassword">Contrase√±a</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">
          Ingresar
        </button>
      </form>
    </div>
  </main>

  <!-- Swwt Alert2  -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Comprovamos que exista alert para poder mostrar la alerta -->
  <% if (typeof alert !=='undefined' ) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
      }).then(() => {
          window.location = '/<%= ruta %>'
        })
    </script>
    <% } %>
</body>

</html>